<%= form_with(model: @post_report, url: hoby_post_reports_path(hoby_id: @hoby.id, post_id: @post.id)) do |form| %>
  <div class="form-group">
    <%= form.hidden_field :user_id, value: @post.user_id %>
    <%= form.hidden_field :post_id, value: @post.id %>
    <%= form.label :reason %>
    <%= form.text_area :reason, class: 'form-control', required: true %>
    <%= form.hidden_field :reported_at, value: Time.now %>
    <%= form.hidden_field :status, value: 'pending' %>
  </div>

  <div class="form-group">
    <%= form.submit "Поскаржитись", class: 'btn btn-primary' %>
  </div>
<% end %>
