<h1>Edit Profile</h1>

<%= form_for(@user) do |f| %>
  <div>
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </div>
  
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </div>

  <div>
    <%= f.submit 'Update' %>
  </div>
<% end %>

<%= link_to 'Back', @user %>
